<!-- This is the new gallery plugin which is integrated into the forntend. Until
     its added to MythTV the menu entry must be uncommented manually. -->

    <button>
        <type>MENU_IMAGES</type>
        <text>Pictures</text>
        <text lang="DE">Bilder</text>
        <description>Look at Pictures</description>
        <description lang="DE">Bilder aus deiner Sammlung anschauen</description>
        <action>JUMP Gallery Default</action>    </button>
    
    <button>
        <type>MENU_GAMES</type>
        <text>Games</text>
        <text lang="DE">Spiele</text>
        <description>Play video games</description>
        <description lang="DE">Konsolen- und andere Spieleklassiker</description>
        <action>PLUGIN mythgame</action>
        <depends>mythgame</depends>
    </button>

   
    <button>
        <type>MENU_INFO_CENTER</type>
        <text>Internet and Information</text>
        <text lang="DE">Internet und Infos</text>
        <description>Surf the net, read news and more</description>
        <description lang="DE">Surfen, Nachrichten lesen und Weiteres</description>
        <action>MENU menu/info_menu.xml</action>
    </button>



    <button>
        <type>DVD_RIP</type>
        <text>Import DVD</text>
        <text lang="DE">DVD importieren</text>
        <description>Import video from a movie DVD and convert it</description>
        <description lang="DE">Filme von DVD importieren und konvertieren</description>
        <action>JUMP Rip DVD</action>
    </button>

    <button>
        <type>MUSIC_RIP</type>
        <text>Import CD</text>
        <text lang="DE">Musik-CDs importieren</text>
        <description>Read music from a CD and convert it</description>
        <description lang="DE">Musik von CD einlesen und konvertieren</description>
        <action>JUMP Rip CD</action>
        <depends>mythmusic</depends>
    </button>

    <button>
        <type>ARCHIVE</type>
        <text>Archive Files</text>
        <text lang="DE">Videos archivieren</text>
        <description>Write video to a data DVD</description>
        <description lang="DE">Videos auf DVD brennen</description>
        <action>PLUGIN mytharchive</action>
        <depends>mytharchive</depends>
    </button>

</mythmenu>

